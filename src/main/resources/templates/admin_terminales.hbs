{{#partial "contenido"}}
<a href="/editar_terminal">
		<img src="img/WhatsApp Image 2016-12-20 at 00.11.54 (1).jpeg" height="30px" style="margin-top: 10px; margin-left: 10px; margin-right: 10px;"/></a>
		<t class="login_text" style="color:#454545;"><strong>Agregar terminal</strong></t>
<form action="buscar_terminales">		
<p class="login_text" style="color:#454545;"><center><t><strong>Ingrese nombre de terminal:</strong></t>
<input type="text" style="border-radius:5px;
	width:177px; height:20px; margin-right: 10px; margin-left:10px" name="nombre">
<t><strong> Ingrese numero de comuna:  </strong></t>
<input type="number" min ="1" style= "margin-right:10px " name="comuna" value ="0"> 
<input type="submit" class="btn_Detalles" value="Buscar"></center></p>
</form>
<center><table width="700" border="0" style="">
  <tbody >
    <tr>
	      <td><p class="historial_tabla" style=" height:25px; width:150px;"> Terminal</p></td>
      <td><p class="historial_tabla" style=" height:25px; width:150px;"> Posicion</p></td>
      <td><p class="historial_tabla" style=" height:25px; width:150px;"> Comuna</p></td>
    </tr>
    {{#terminales}}
    <tr>
    
    <td><p class=" historial_tabla_textos">{{nombre}}</p></td>
    <td><p class=" historial_tabla_textos"> Lat: {{point.longitud}}<br> Long: {{point.longitud}}</p></td>
    <td><p class=" historial_tabla_textos"> {{point.domicilio.comuna}}</p></td>
    <td>
		<a href="/editar_terminal?nombre={{nombre}}">
		<img src="img/WhatsApp Image 2016-12-20 at 00.11.54 (2).jpeg" height="30px" style="margin-top: 10px; margin-left: 10px; margin-right: 10px;"/>
		</a>
		
		<img src="img/WhatsApp Image 2016-12-20 at 00.11.55 (1).jpeg" height="30px" style="margin-top: 10px; margin-left: 10px; margin-right: 10px;cursor: pointer;" onclick="	
		
		if(confirm('Desea eliminar la terminal{{nombre}}')==true){
		$.ajax({
    url: '/borrar_terminal?nombre={{nombre}}',
    type: 'DELETE',
     success: function(data, textStatus) {
            window.location.href = data.redirect;
            }
});}"> 
		
</td>

    </tr>
    {{/terminales}}
  </tbody>
</table>
	</center>
  {{/partial}}
